@model Requests
<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удаление запроса</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CompanyName">Компания</label>
            <input asp-for="CompanyName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Количество месяцев</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Описание</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
        <a asp-controller="Requests" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Назад
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}